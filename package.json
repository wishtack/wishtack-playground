{
  "scripts": {
    "build": "rm -Rf dist && tsc && cp src/*.openapi.yaml dist/src/",
    "codegen": "openapi-generator-cli generate -i src/recipes.openapi.yaml -g typescript-angular -o src/dtos --additional-properties fileNaming=kebab-case --global-property models",
    "deploy": "tools/deploy.sh",
    "start": "nodemon src/main.ts --watch src --ext ts,yaml",
    "test": "playwright test --reporter html"
  },
  "dependencies": {
    "axios": "1.2.1",
    "body-parser": "1.20.1",
    "express": "4.18.2",
    "express-openapi-validator": "4.13.5",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "2.1.4",
    "memoizee": "0.4.15"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "2.5.2",
    "@playwright/test": "1.28.1",
    "@types/body-parser": "1.19.2",
    "@types/express": "4.17.14",
    "@types/jsonwebtoken": "8.5.9",
    "@types/memoizee": "0.4.8",
    "nodemon": "2.0.19",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "packageManager": "yarn@3.3.0"
}
