{
  "name": "playwright-run-in-browser",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "bun run build",
    "build": "bun run --filter '*' build",
    "build:transform-angular": "bun run --filter transform-angular build",
    "build:transform-run-in-browser": "bun run --filter transform-run-in-browser build",
    "debug": "bun reset && bun run test",
    "dev:testing": "tools/start-test-server.sh",
    "reset": "playwright clear-cache && rm -rf playwright/generated && bun run build",
    "test": "concurrently --kill-others --success first \"wait-on http://localhost:7357 && playwright test --reporter list\" \"bun dev:testing\"",
    "test:transform-angular": "bun run --filter transform-angular test --watch false",
    "test:transform-run-in-browser": "bun run --filter transform-run-in-browser test --watch false"
  },
  "dependencies": {
    "@angular/animations": "^19.0.0-next.0",
    "@angular/common": "^19.0.0-next.0",
    "@angular/compiler": "^19.0.0-next.0",
    "@angular/core": "^19.0.0-next.0",
    "@angular/forms": "^19.0.0-next.0",
    "@angular/platform-browser": "^19.0.0-next.0",
    "@angular/platform-browser-dynamic": "^19.0.0-next.0",
    "@angular/router": "^19.0.0-next.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0-next.10",
    "@angular/cli": "^19.0.0-next.10",
    "@angular/compiler-cli": "^19.0.0-next.0",
    "@babel/core": "^7.25.8",
    "@babel/generator": "^7.25.7",
    "@babel/helper-plugin-utils": "^7.25.7",
    "@playwright/test": "1.48.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__helper-plugin-utils": "^7.10.3",
    "@types/node": "22.7.5",
    "concurrently": "^9.0.1",
    "prettier": "^3.3.3",
    "typescript": "~5.6.2",
    "vitest": "2.1.3",
    "wait-on": "^8.0.1"
  }
}
