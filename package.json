{
  "type": "module",
  "scripts": {
    "build": "rm -Rf dist && tsc && cp src/*.openapi.yaml dist/src/",
    "codegen": "openapi-generator-cli generate -i src/recipes.openapi.yaml -g typescript-angular -o src/dtos --additional-properties fileNaming=kebab-case --global-property models",
    "deploy": "tools/deploy.sh",
    "start": "nodemon --esm src/main.ts --watch src --ext ts,yaml",
    "test": "playwright test"
  },
  "dependencies": {
    "axios": "^1.0.0-alpha.1",
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "express-openapi-validator": "^4.13.8",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.1.4",
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@playwright/test": "^1.25.2",
    "@types/memoizee": "^0.4.8",
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "wait-on": "^6.0.1"
  }
}
