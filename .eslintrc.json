{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:api",
                "onlyDependOnLibsWithTags": ["type:adapters", "type:domain", "type:util"]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": ["type:feature"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:adapters", "type:domain", "type:util"],
                "allowedExternalImports": ["express"]
              },
              {
                "sourceTag": "type:adapters",
                "onlyDependOnLibsWithTags": ["type:api", "type:domain", "type:util"],
                "allowedExternalImports": ["dynamo"]
              },
              {
                "sourceTag": "type:domain",
                "onlyDependOnLibsWithTags": ["type:domain", "type:util"],
                "allowedExternalImports": []
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              {
                "sourceTag": "scope:locale",
                "onlyDependOnLibsWithTags": ["scope:locale", "scope:shared", "type:api"]
              },
              {
                "sourceTag": "scope:title",
                "onlyDependOnLibsWithTags": ["scope:title", "scope:shared", "type:api"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
